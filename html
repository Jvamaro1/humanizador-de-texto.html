<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Humanizador de Texto com IA</title>
  <!-- Carrega o Tailwind CSS diretamente de um CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Carrega React e ReactDOM de CDNs -->
  <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
  <!-- Carrega Babel para transpilar o JSX diretamente no navegador -->
  <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
  <style>
    .font-sans {
      font-family: ui-sans-serif, system-ui, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    }
    body {
      background-color: #f3f4f6;
    }
  </style>
</head>
<body>
  <div id="root"></div>

  <script type="text/babel">
    'use strict';

    // O componente principal da aplicação
    const App = () => {
      const [activeTab, setActiveTab] = React.useState('humanizer');
      const [humanizerInput, setHumanizerInput] = React.useState('');
      const [humanizerOutput, setHumanizerOutput] = React.useState('');
      const [aiScore, setAiScore] = React.useState(null);
      const [isLoadingHumanizer, setIsLoadingHumanizer] = React.useState(false);
      const [humanizerMessage, setHumanizerMessage] = React.useState('');

      const [ideaInput, setIdeaInput] = React.useState('');
      const [ideaOutput, setIdeaOutput] = React.useState('');
      const [isLoadingIdea, setIsLoadingIdea] = React.useState(false);
      const [ideaMessage, setIdeaMessage] = React.useState('');
      const [isModalOpen, setIsModalOpen] = React.useState(false);
      const [selectedTone, setSelectedTone] = React.useState('');
      const [customTone, setCustomTone] = React.useState('');
      
      // Chave da API (ATENÇÃO: mantenha segura em um ambiente de produção)
      const API_KEY = "AIzaSyDKiH0jgwrbNfh0l4fHuRj1i1DMJBCsfbQ";
      const API_URL = `https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-pro-latest:generateContent?key=${API_KEY}`;

      // Função para chamar a API e verificar a pontuação de IA
      const checkAiScore = async () => {
        setIsLoadingHumanizer(true);
        setHumanizerMessage('Verificando a pontuação de IA...');
        setAiScore(null);
        setHumanizerOutput('');

        try {
          const userQuery = `Analise o texto a seguir e forneça uma pontuação de 0 a 100 indicando o quão "humano" ele soa. Responda apenas com o número. Texto: "${humanizerInput}"`;
          
          const payload = {
            contents: [{ parts: [{ text: userQuery }] }],
            tools: [{ "google_search": {} }],
            systemInstruction: {
              parts: [{ text: "Você é um especialista em análise de texto e detecção de padrões de escrita humana vs. IA. Avalie a naturalidade e fluidez do texto." }]
            },
          };

          const response = await fetch(API_URL, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });

          const result = await response.json();
          const scoreText = result?.candidates?.[0]?.content?.parts?.[0]?.text;
          const score = parseInt(scoreText.match(/\d+/)?.[0], 10);
          
          if (score) {
            setAiScore(score);
            setHumanizerMessage(score > 80 ? 'Este texto parece ter sido escrito por um humano.' : 'Este texto pode ter sido gerado por uma IA.');
          } else {
            setHumanizerMessage('Não foi possível obter a pontuação. Tente novamente.');
          }
        } catch (error) {
          console.error('Erro ao verificar pontuação:', error);
          setHumanizerMessage('Ocorreu um erro ao conectar com o serviço. Tente novamente.');
        } finally {
          setIsLoadingHumanizer(false);
        }
      };

      // Função para chamar a API e humanizar o texto
      const humanizeText = async () => {
        setIsLoadingHumanizer(true);
        setHumanizerMessage('Humanizando o texto...');
        setHumanizerOutput('');

        try {
          const userQuery = `Reescreva o texto a seguir para que ele soe mais natural, claro e humano, sem perder a ideia original. Texto: "${humanizerInput}"`;

          const payload = {
            contents: [{ parts: [{ text: userQuery }] }],
            tools: [{ "google_search": {} }],
            systemInstruction: {
              parts: [{ text: "Você é um assistente de escrita que humaniza textos, transformando conteúdo robótico e formal em algo mais fluente, envolvente e profissional. Foque em variar a estrutura das frases e o vocabulário para capturar um tom mais autêntico." }]
            },
          };

          const response = await fetch(API_URL, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });
          
          const result = await response.json();
          const humanizedText = result?.candidates?.[0]?.content?.parts?.[0]?.text;

          if (humanizedText) {
            setHumanizerOutput(humanizedText);
            setAiScore(95);
            setHumanizerMessage('Texto humanizado com sucesso!');
          } else {
            setHumanizerMessage('Não foi possível humanizar o texto. Tente novamente.');
          }
        } catch (error) {
          console.error('Erro ao humanizar texto:', error);
          setHumanizerMessage('Ocorreu um erro ao conectar com o serviço. Tente novamente.');
        } finally {
          setIsLoadingHumanizer(false);
        }
      };

      // Função para gerar ideias de texto/e-mail
      const generateIdea = async (tone) => {
        setIsModalOpen(false);
        setIsLoadingIdea(true);
        setIdeaMessage('Gerando ideias...');
        setIdeaOutput('');

        try {
          const finalTone = tone === 'outra' ? customTone : tone;
          const userQuery = `Crie um texto ou e-mail com base na seguinte solicitação, no tom de "${finalTone}". Forneça a versão completa.

          Solicitação: "${ideaInput}"`;

          const payload = {
            contents: [{ parts: [{ text: userQuery }] }],
            tools: [{ "google_search": {} }],
            systemInstruction: {
              parts: [{ text: "Você é um assistente de escrita que cria rascunhos de e-mails e textos. Sua tarefa é fornecer uma versão completa para a solicitação do usuário, focando no tom de voz especificado." }]
            },
          };

          const response = await fetch(API_URL, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });

          const result = await response.json();
          const generatedText = result?.candidates?.[0]?.content?.parts?.[0]?.text;
          
          if (generatedText) {
            setIdeaOutput(generatedText);
            setIdeaMessage('Ideia gerada com sucesso!');
          } else {
            setIdeaMessage('Não foi possível gerar a ideia. Tente novamente.');
          }
        } catch (error) {
          console.error('Erro ao gerar ideia:', error);
          setIdeaMessage('Ocorreu um erro ao conectar com o serviço. Tente novamente.');
        } finally {
          setIsLoadingIdea(false);
        }
      };

      const handleHumanizerInputChange = (event) => {
        setHumanizerInput(event.target.value);
        setAiScore(null);
        setHumanizerMessage('');
        setHumanizerOutput('');
      };

      const handleIdeaInputChange = (event) => {
        setIdeaInput(event.target.value);
        setIdeaMessage('');
        setIdeaOutput('');
      };

      const openModal = () => {
        setIsModalOpen(true);
        setIdeaMessage('');
        setIdeaOutput('');
        setSelectedTone('');
        setCustomTone('');
      };

      const closeModal = () => {
        setIsModalOpen(false);
      };

      return (
        <div className="min-h-screen bg-gray-50 flex items-center justify-center p-4 sm:p-6 font-sans">
          <div className="w-full max-w-4xl bg-white rounded-2xl shadow-xl overflow-hidden p-6 sm:p-10">
            <div className="flex flex-col items-center">
              <h1 className="text-4xl sm:text-5xl font-extrabold text-gray-800 text-center mb-2">
                AI Text Assistant
              </h1>
              <p className="text-base sm:text-lg text-gray-600 text-center mb-8">
                Um assistente para aprimorar e gerar textos com IA.
              </p>
            </div>

            <div className="flex justify-center mb-6 border-b border-gray-200">
              <button
                onClick={() => setActiveTab('humanizer')}
                className={`py-2 px-6 font-semibold text-lg transition-colors duration-300 ${
                  activeTab === 'humanizer' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'
                }`}
              >
                Humanizador
              </button>
              <button
                onClick={() => setActiveTab('idea')}
                className={`py-2 px-6 font-semibold text-lg transition-colors duration-300 ${
                  activeTab === 'idea' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'
                }`}
              >
                Ideia de Texto/E-mail
              </button>
            </div>

            {activeTab === 'humanizer' && (
              <div className="space-y-6">
                <div className="relative">
                  <textarea
                    className="w-full h-48 sm:h-64 p-4 text-gray-800 bg-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all resize-none"
                    placeholder="Cole ou digite seu texto aqui..."
                    value={humanizerInput}
                    onChange={handleHumanizerInputChange}
                  ></textarea>
                </div>
                <div className="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
                  <button
                    onClick={checkAiScore}
                    disabled={isLoadingHumanizer || !humanizerInput}
                    className="w-full sm:w-1/2 flex items-center justify-center py-3 px-6 rounded-xl font-semibold text-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors duration-300 disabled:bg-blue-400 disabled:cursor-not-allowed shadow-md"
                  >
                    {isLoadingHumanizer && humanizerMessage.includes('Verificando') ? (
                      <svg className="animate-spin h-5 w-5 mr-3 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                        <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                    ) : (
                      'Verificar AI Score'
                    )}
                  </button>
                  <button
                    onClick={humanizeText}
                    disabled={isLoadingHumanizer || !humanizerInput}
                    className="w-full sm:w-1/2 flex items-center justify-center py-3 px-6 rounded-xl font-semibold text-lg bg-green-600 text-white hover:bg-green-700 transition-colors duration-300 disabled:bg-green-400 disabled:cursor-not-allowed shadow-md"
                  >
                    {isLoadingHumanizer && humanizerMessage.includes('Humanizando') ? (
                      <svg className="animate-spin h-5 w-5 mr-3 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                        <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                    ) : (
                      'Humanizar Texto'
                    )}
                  </button>
                </div>
                {humanizerMessage && (
                  <div className="mt-6 p-4 rounded-xl text-center font-medium bg-blue-50 text-blue-800">
                    {humanizerMessage}
                  </div>
                )}
                {aiScore !== null && (
                  <div className="mt-6 flex flex-col items-center">
                    <p className="text-xl sm:text-2xl font-bold text-gray-700">
                      AI Score: <span className={`font-extrabold ${aiScore > 80 ? 'text-green-600' : 'text-red-600'}`}>{aiScore}%</span>
                    </p>
                  </div>
                )}
                {humanizerOutput && (
                  <div className="mt-8">
                    <h2 className="text-2xl font-bold text-gray-800 mb-4">Texto Humanizado</h2>
                    <div className="w-full p-4 text-gray-800 bg-gray-100 rounded-xl whitespace-pre-wrap">
                      {humanizerOutput}
                    </div>
                  </div>
                )}
              </div>
            )}

            {activeTab === 'idea' && (
              <div className="space-y-6">
                <p className="text-base text-gray-600 text-center mb-6">
                  Descreva brevemente o que você precisa e gere ideias para textos e e-mails em diferentes tons.
                </p>
                <div className="relative">
                  <textarea
                    className="w-full h-48 sm:h-64 p-4 text-gray-800 bg-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all resize-none"
                    placeholder="Exemplo: Preciso de um e-mail para solicitar o saldo do cartão corporativo."
                    value={ideaInput}
                    onChange={handleIdeaInputChange}
                  ></textarea>
                </div>
                <div className="flex justify-center">
                  <button
                    onClick={openModal}
                    disabled={isLoadingIdea || !ideaInput}
                    className="w-full sm:w-auto flex items-center justify-center py-3 px-8 rounded-xl font-semibold text-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors duration-300 disabled:bg-blue-400 disabled:cursor-not-allowed shadow-md"
                  >
                    {isLoadingIdea ? (
                      <svg className="animate-spin h-5 w-5 mr-3 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                        <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                    ) : (
                      'Gerar Ideia'
                    )}
                  </button>
                </div>
                {ideaMessage && (
                  <div className="mt-6 p-4 rounded-xl text-center font-medium bg-blue-50 text-blue-800">
                    {ideaMessage}
                  </div>
                )}
                {ideaOutput && (
                  <div className="mt-8">
                    <div className="w-full p-6 text-gray-800 bg-gray-100 rounded-xl whitespace-pre-wrap leading-relaxed">
                      {ideaOutput}
                    </div>
                  </div>
                )}
              </div>
            )}
            
            {isModalOpen && (
              <div className="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center p-4">
                <div className="bg-white rounded-xl shadow-2xl p-6 w-full max-w-sm">
                  <h2 className="text-xl font-bold mb-4 text-gray-800 text-center">Escolha o Tom do Texto</h2>
                  <div className="flex flex-col space-y-3">
                    <button
                      onClick={() => generateIdea('formal')}
                      className="w-full py-3 px-6 rounded-xl font-semibold text-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors duration-300"
                    >
                      Formal
                    </button>
                    <button
                      onClick={() => generateIdea('direto ao ponto')}
                      className="w-full py-3 px-6 rounded-xl font-semibold text-lg bg-green-600 text-white hover:bg-green-700 transition-colors duration-300"
                    >
                      Direto ao ponto
                    </button>
                    <button
                      onClick={() => generateIdea('suave')}
                      className="w-full py-3 px-6 rounded-xl font-semibold text-lg bg-yellow-600 text-white hover:bg-yellow-700 transition-colors duration-300"
                    >
                      Suave
                    </button>
                    <div className="mt-4">
                      <input
                        type="text"
                        placeholder="Outra opção (ex: engraçado, técnico)"
                        value={customTone}
                        onChange={(e) => {
                          setSelectedTone('outra');
                          setCustomTone(e.target.value);
                        }}
                        className="w-full p-3 text-gray-800 bg-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-500"
                      />
                    </div>
                    <button
                      onClick={() => generateIdea('outra')}
                      disabled={!customTone}
                      className="w-full mt-3 py-3 px-6 rounded-xl font-semibold text-lg bg-gray-600 text-white hover:bg-gray-700 transition-colors duration-300 disabled:bg-gray-400 disabled:cursor-not-allowed"
                    >
                      Gerar
                    </button>
                  </div>
                  <button onClick={closeModal} className="mt-4 text-sm text-gray-500 hover:text-gray-800 transition-colors duration-300">
                    Cancelar
                  </button>
                </div>
              </div>
            )}
          </div>
        </div>
      );
    };

    const domNode = document.getElementById('root');
    const root = ReactDOM.createRoot(domNode);
    root.render(React.createElement(App, null));
  </script>
</body>
</html>
